<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
                android:orientation="vertical"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <EditText
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:id="@+id/output_sc"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/white_bg"
        android:editable="false"
        android:gravity="right" />



    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="C"
            android:textSize="20sp"
            android:background="@drawable/white_slt"
            android:gravity="right|bottom"
            android:id="@+id/bt_clear" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="DEL"
            android:textSize="20sp"
            android:background="@drawable/white_slt"
            android:gravity="right|bottom"
            android:id="@+id/bt_delete" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="÷"
            android:textSize="20sp"
            android:background="@drawable/white_slt"
            android:gravity="right|bottom"
            android:id="@+id/bt_chuhao" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="×"
            android:background="@drawable/white_slt"
            android:textSize="20sp"
            android:gravity="right|bottom"
            android:id="@+id/bt_shenghao" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="7"
            android:textSize="20sp"
            android:background="@drawable/white_slt"
            android:gravity="right|bottom"
            android:id="@+id/bt_7" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="8"
            android:textSize="20sp"
            android:background="@drawable/white_slt"
            android:gravity="right|bottom"
            android:id="@+id/bt_8" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="9"
            android:textSize="20sp"
            android:background="@drawable/white_slt"
            android:gravity="right|bottom"
            android:id="@+id/bt_9" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="-"
            android:textSize="20sp"
            android:background="@drawable/white_slt"
            android:gravity="right|bottom"
            android:id="@+id/bt_jianhao" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="4"
            android:textSize="20sp"
            android:background="@drawable/white_slt"
            android:gravity="right|bottom"
            android:id="@+id/bt_4" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="5"
            android:background="@drawable/white_slt"
            android:textSize="20sp"
            android:gravity="right|bottom"
            android:id="@+id/bt_5" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="6"
            android:background="@drawable/white_slt"
            android:textSize="20sp"
            android:gravity="right|bottom"
            android:id="@+id/bt_6" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="+"
            android:background="@drawable/white_slt"
            android:textSize="20sp"
            android:gravity="right|bottom"
            android:id="@+id/bt_plus" />
    </LinearLayout>





    <!---->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:text="1"
                    android:textSize="20sp"
                    android:background="@drawable/white_slt"
                    android:gravity="right|bottom"
                    android:id="@+id/bt_1" />
                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:text="2"
                    android:textSize="20sp"
                    android:background="@drawable/white_slt"
                    android:gravity="right|bottom"
                    android:id="@+id/bt_2" />
                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:text="3"
                    android:textSize="20sp"
                    android:background="@drawable/white_slt"
                    android:gravity="right|bottom"
                    android:id="@+id/bt_3" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <Button
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:text="0"
                    android:textSize="20sp"
                    android:background="@drawable/white_slt"
                    android:gravity="right|bottom"
                    android:id="@+id/bt_zero" />
                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:text="."
                    android:textSize="20sp"
                    android:background="@drawable/white_slt"
                    android:gravity="right|bottom"
                    android:id="@+id/bt_dot" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="60dp"
                android:layout_height="140dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:layout_marginRight="10dp"
                android:text="＝"
                android:textSize="20sp"
                android:background="@drawable/blue_slt"
                android:gravity="right|bottom"
                android:id="@+id/bt_dengyu" />

        </LinearLayout>

    </LinearLayout>





</LinearLayout>
